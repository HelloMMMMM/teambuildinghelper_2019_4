.weui-agree__link {
  display: inline;
  color: #586c94;
}

.header-desc{
  margin: 32rpx 40rpx;
}

.header-btn{
  margin: 40rpx 40rpx 0rpx 40rpx;
}

.invitation-content{
  display: flex;
  align-items: center;
  padding-left: 30rpx;
